// Receba 2 valores inteiros. Calcule e mostre o resultado da diferença do maior para o menor

import javax.swing.JOptionPane;

public class Main {
	public static void main (String [] arg) {
		
		int a, b, ans;
		
		a = Integer.parseInt(JOptionPane.showInputDialog("Digite o primeiro valor: "));
		b = Integer.parseInt (JOptionPane.showInputDialog("Digite o segundo valor: "));
		
		if (a>b) {
			ans = a - b;
		}
		else{
			ans = b - a;
		}
		
		System.out.println ("A diferença entre o maior número e o menor é: " +ans);
	}
}
